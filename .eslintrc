{
    "parserOptions":
    {
        "ecmaVersion": 8,
        "ecmaFeatures":
        {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },

    "env":
    {
        "es6": true,
        "node": true
    },

    "plugins": [
        "import",
        "node",
        "promise",
        "standard",
        "react"
    ],
    "rules":
    {
        "semi": ["error", "always"],
        "no-unused-vars": ["error",
        {
            "vars": "all",
            "args": "after-used",
            "ignoreRestSiblings": false
        }],
        "no-undef": "error",
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    }
}